        <icon height="1024" src="www/img/icons/1024.png" width="1024" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-sqlite-storage" spec="^4.0.0" />
</widget>
